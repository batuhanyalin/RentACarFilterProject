@model List<GetCarQueryResult>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h2 class="section-heading"><strong>Araç Listesi</strong></h2>
                <p class="mb-5">Motor ve yürüyen bakımları sürekli yapılan, otomatik-manuel, benzinli-elektrikli-dizel araçlarımız temiz ve bakımlı araçlarımızdan istediğiniz modeli kirayalabilirsiniz.</p>
            </div>
        </div>


        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="listing d-block  align-items-stretch">
                        <div class="listing-img h-100 mr-4">
                            <img src="@item.ImageUrl" alt="Image" class="img-fluid">
                        </div>
                        <div class="listing-contents h-100">
                            <h3>@item.BrandName @item.Model</h3>
                            <div class="rent-price">
                                <strong>@item.Price ₺</strong><span class="mx-1">/</span>günlük
                            </div>
                            <br />
                            <div>
                                <p><a href="#" data-toggle="modal" data-target="#CarDetail-@item.CarId" class="btn btn-primary btn-sm">Araç Detayları</a></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="CarDetail-@item.CarId" role="dialog" aria-labelledby="exampleModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">@item.BrandName @item.Model</h5>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                            </div>
                            <div class="modal-body">
                                <img src="@item.ImageUrl" class="w-100 mb-3" style="height:300px;" />
                                <div class="card">
                                    <div class="card-header">Araç Özellikleri</div>
                                    <div class="card-body p-3">
                                        <table class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Yıl</th>
                                                    <th>Vites</th>
                                                    <th>Yakıt</th>
                                                    <th>Koltuk</th>
                                                    <th>Kapı</th>
                                                    <th>Bagaj</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>@item.Year</td>
                                                    <td>@item.Transmission</td>
                                                    <td>@item.Fuel</td>
                                                    <td>@item.Seat</td>
                                                    <td>@item.Doors</td>
                                                    <td>@item.LuggageCapacity</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>