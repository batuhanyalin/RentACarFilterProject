@model CreateLocationCommand
@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="alert alert-info">
    <div class="row">
        <div class="col col-md-2">
            <h4><a href="/Admin/Location/Index" class="btn btn-primary">Listeye Dön</a></h4>
        </div>
        <div class="col">
            <h2>Yeni Lokasyon Oluştur</h2>
        </div>
    </div>
</div>
<form method="post">
    <div class="alert alert-success">
        <div class="row">
            <div class="col col-md-4">
                <label class="form-label">Lokasyon Adı</label>
                <input class="form-control" asp-for=Name type="text" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <button class="btn btn-success"><i class="fas fa-save"></i> Kaydet</button>
            </div>
        </div>
    </div>
</form>